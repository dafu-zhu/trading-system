{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "console": {
      "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    },
    "json": {
      "()": "src.logger.logger.JsonFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "console",
      "stream": "ext://sys.stderr"
    },
    "app_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/app.jsonl",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "gateway_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/gateway.jsonl",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "data_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/data.jsonl",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "strategy_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/strategy.jsonl",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "analytics_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/analytics.jsonl",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "backtester_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/backtester.jsonl",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": [
        "console",
        "app_file"
      ],
      "respect_handler_level": true
    }
  },
  "loggers": {
    "root": {
      "level": "INFO",
      "handlers": ["queue_handler"]
    },
    "src.gateway": {
      "level": "DEBUG",
      "handlers": ["gateway_file"],
      "propagate": false
    },
    "src.data": {
      "level": "DEBUG",
      "handlers": ["console", "data_file"],
      "propagate": false
    },
    "src.strategy": {
      "level": "DEBUG",
      "handlers": ["strategy_file"],
      "propagate": false
    },
    "src.analytics": {
      "level": "DEBUG",
      "handlers": ["analytics_file"],
      "propagate": false
    },
    "src.backtester": {
      "level": "DEBUG",
      "handlers": ["backtester_file"],
      "propagate": false
    }
  }
}