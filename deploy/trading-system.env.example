# Trading System Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ALPACA API CREDENTIALS (Required for paper/live trading)
# =============================================================================
ALPACA_API_KEY=your_api_key_here
ALPACA_API_SECRET=your_api_secret_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Symbols to trade (comma-separated, no spaces)
TRADING_SYMBOLS=AAPL,MSFT,GOOGL

# Trading mode: true = dry run (no real orders), false = execute real orders
TRADING_DRY_RUN=true

# Enable/disable trading (false = monitoring only)
TRADING_ENABLE=true

# Paper mode: true = paper trading, false = live trading
# WARNING: Setting to false will use REAL MONEY
TRADING_PAPER_MODE=true

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Maximum position size (shares)
RISK_MAX_POSITION_SIZE=1000

# Maximum position value ($)
RISK_MAX_POSITION_VALUE=100000

# Maximum total portfolio exposure ($)
RISK_MAX_TOTAL_EXPOSURE=500000

# Rate limits
RISK_MAX_ORDERS_PER_MINUTE=100
RISK_MAX_ORDERS_PER_SYMBOL_PER_MINUTE=20

# Minimum cash buffer to maintain ($)
RISK_MIN_CASH_BUFFER=1000

# =============================================================================
# STOP LOSS CONFIGURATION
# =============================================================================

# Position stop loss percentage
STOP_LOSS_POSITION_PCT=2.0

# Trailing stop percentage (if enabled)
STOP_LOSS_TRAILING_PCT=3.0

# Daily portfolio stop loss percentage
STOP_LOSS_PORTFOLIO_PCT=5.0

# Maximum drawdown before circuit breaker (%)
STOP_LOSS_MAX_DRAWDOWN_PCT=10.0

# Enable trailing stops (true/false)
STOP_LOSS_USE_TRAILING=false

# Enable circuit breaker (true/false)
STOP_LOSS_CIRCUIT_BREAKER=true

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (relative to working directory)
LOG_FILE=logs/live_trading.log

# Order log file path
ORDER_LOG_FILE=logs/orders.csv
